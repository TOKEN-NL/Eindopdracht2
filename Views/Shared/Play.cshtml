@model Eindopdracht2.Models.Album

@{
    ViewData["Title"] = "Play";
}

<html>
<head>
    <title>Media Player Overlay</title>
    <style>
        /* Stijl voor de mediaplayer */
        .mediaplayer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #f2f2f2;
            padding: 10px;
            border-top: 1px solid #ccc;
        }
    </style>
</head>
<body>

    <!-- De mediaplayer overlay -->
    <div class="mediaplayer">
        <audio controls id="audioPlayer">
            <source src="@Model.AudioFilePath" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
    </div>

    <!-- Voeg hier de rest van je HTML-inhoud toe -->

</body>
</html>